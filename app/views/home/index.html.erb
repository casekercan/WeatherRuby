<h1> What's the Weather?</h1>
<h2>Enter an address below to find out...</h2>

<div>
<%= form_tag("/weather", method: "get") do %>
    <%= label_tag(:street, "Street:") %>
    <%= text_field_tag(:street) %>
    <br><br>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag(:city) %>
    <br><br>
    <%= label_tag(:state, "State:") %>
    <%= text_field_tag(:state) %>
    <br><br>
    <%= label_tag(:zip, "Zipcode:") %>
    <%= text_field_tag(:zip) %>
    <br><br>
    <%= submit_tag "Get Weather", name: nil %>
  <% end %>
</div>



